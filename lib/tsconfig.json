{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "build",
    "declaration": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "src/__tests__/**/*"]
}
